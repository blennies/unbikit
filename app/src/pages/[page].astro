---
// must be the first import to ensure cascade layers, etc. are setup in the correct order
import StarlightPage from "@astrojs/starlight/components/StarlightPage.astro";

import {
  compiledContent as changelogCompiledContent,
  getHeadings as changelogGetHeadings,
} from "../../../CHANGELOG.md";
import {
  compiledContent as licenseCompiledContent,
  getHeadings as licenseGetHeadings,
} from "../../../LICENSE.md";

interface Params {
  page: string;
}
interface Props {
  content: string;
  headings: ReturnType<typeof changelogGetHeadings>;
}
interface PathInfo {
  params: Params;
  props: Props;
}

export async function getStaticPaths(): Promise<PathInfo[]> {
  return [
    {
      params: { page: "changelog" },
      props: {
        content: await changelogCompiledContent(),
        headings: changelogGetHeadings(),
      },
    },
    {
      params: { page: "license" },
      props: {
        content: await licenseCompiledContent(),
        headings: licenseGetHeadings(),
      },
    },
  ];
}

const { content, headings } = Astro.props;

let html = content.replace(/<h1[^>]*>.*?<\/h1>/, "");

for (const heading of headings) {
  if ([2, 3].includes(heading.depth)) {
    const tag = `h${heading.depth}`;
    const id = heading.slug;
    const text = heading.text;
    html = html.replace(new RegExp(`<${tag} id="${id}"[^>]*>.*?<\/${tag}>`), (match) => {
      return `<div class="sl-heading-wrapper level-h2">${match}<a class="sl-anchor-link" href="#${id}"><span aria-hidden="true" class="sl-anchor-icon"><svg width="16" height="16" viewBox="0 0 24 24"><path fill="currentcolor" d="m12.11 15.39-3.88 3.88a2.52 2.52 0 0 1-3.5 0 2.47 2.47 0 0 1 0-3.5l3.88-3.88a1 1 0 0 0-1.42-1.42l-3.88 3.89a4.48 4.48 0 0 0 6.33 6.33l3.89-3.88a1 1 0 1 0-1.42-1.42Zm8.58-12.08a4.49 4.49 0 0 0-6.33 0l-3.89 3.88a1 1 0 0 0 1.42 1.42l3.88-3.88a2.52 2.52 0 0 1 3.5 0 2.47 2.47 0 0 1 0 3.5l-3.88 3.88a1 1 0 1 0 1.42 1.42l3.88-3.89a4.49 4.49 0 0 0 0-6.33ZM8.83 15.17a1 1 0 0 0 1.1.22 1 1 0 0 0 .32-.22l4.92-4.92a1 1 0 0 0-1.42-1.42l-4.92 4.92a1 1 0 0 0 0 1.42Z"></path></svg></span><span class="sr-only">Section titled “${text}”</span></a></div>`;
    });
  }
}
---

<StarlightPage
  frontmatter={{ title: headings?.[0]?.text ?? "", next: false, prev: false }}
  headings={headings}
>
  <Fragment set:html={html} />
</StarlightPage>
