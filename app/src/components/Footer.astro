---
import { Image } from "astro:assets";
import { Icon } from "@astrojs/starlight/components";
import typeDocLogo from "../images/typedoc-logo.png";

const { slug } = Astro.params;
---

<footer class="sl-flex">
  <div class="meta sl-flex">
    <div class="sl-flex credits">
      <a class="sl-flex kudos" href="https://starlight.astro.build">
        <Icon name="starlight" size="15px" />
        {(Astro.locals as any).t("builtWithStarlight.label")}
      </a>
      {
        slug?.startsWith("api/") && (
          <a class="sl-flex kudos" href="https://typedoc.org/">
            <Image class="gray" src={typeDocLogo} alt="TypeDoc logo" width={15} />
            Type info generated by TypeDoc
          </a>
        )
      }
    </div>
  </div>
</footer>

<style>
  @layer starlight.core {
    footer {
      flex-direction: column;
      gap: 1.5rem;
    }
    .credits {
      gap: 1rem;
      justify-content: center;
    }
    .meta {
      gap: 0.75rem 3rem;
      justify-content: space-evenly;
      flex-wrap: wrap;
      margin-top: 2rem;
      font-size: var(--sl-text-sm);
      color: var(--sl-color-gray-3);
    }
    .meta > :global(p:only-child) {
      margin-inline-start: auto;
    }
    .kudos {
      align-items: center;
      justify-content: center;
      gap: 0.5em;
      font-size: var(--sl-text-xs);
      text-decoration: none;
      color: var(--sl-color-gray-3);
    }
    .kudos .gray {
      filter: grayscale(1);
    }

    @media (max-width: 50rem) {
      .credits {
        flex-direction: column;
      }
    }
  }

  @layer starlight.components {
    .kudos:hover :global(svg) {
      color: var(--sl-color-orange);
    }
    .kudos:hover {
      color: var(--sl-color-white);
    }
    .kudos:hover .gray {
      filter: none;
    }
  }

  .kudos {
    border: none;
  }
</style>
